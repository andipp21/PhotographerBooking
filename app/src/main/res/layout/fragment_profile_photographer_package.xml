<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margin_content"
    tools:context=".view.photographer.fragment.profile.ProfilePhotographerPackageFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPackage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:spanCount="3"
        tools:listitem="@layout/item_package_photographer"
        android:layout_marginBottom="@dimen/margin_content"
        app:layout_constraintBottom_toTopOf="@id/btnAddPackage"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddPackage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content"
        android:background="@drawable/button_enabled"
        android:text="@string/add_package"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>