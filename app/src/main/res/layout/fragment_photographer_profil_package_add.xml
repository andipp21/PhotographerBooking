<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="320dp"
    tools:context=".view.photographer.fragment.profile.subFragment.PhotographerProfilPackageBenefitAddFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/add_benefit"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:labelFor="@id/title"
        android:id="@+id/etBenefit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:autofillHints="@string/add_benefit" />

    <Button
        android:id="@+id/btnAddBenefit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_enabled"
        android:text="@string/add_benefit"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etBenefit" />

</androidx.constraintlayout.widget.ConstraintLayout>