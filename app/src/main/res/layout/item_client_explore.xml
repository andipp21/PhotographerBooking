<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivProfilePicturePhotographer"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/photographer_profile_picture"
        android:scaleType="fitXY"
        android:src="@drawable/line_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/photographerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparentDarkGreen"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingHorizontal="8dp"
        android:paddingBottom="4dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@id/photographerLocation"
        app:layout_constraintEnd_toEndOf="@id/ivProfilePicturePhotographer"
        app:layout_constraintStart_toStartOf="@id/ivProfilePicturePhotographer" />

    <TextView
        android:id="@+id/photographerLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparentDarkGreen"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:paddingBottom="4dp"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/ic_location_explore"
        app:layout_constraintBottom_toBottomOf="@id/ivProfilePicturePhotographer"
        app:layout_constraintEnd_toEndOf="@id/ivProfilePicturePhotographer"
        app:layout_constraintStart_toStartOf="@id/ivProfilePicturePhotographer"
        app:drawableTint="@color/colorWhite" />

</androidx.constraintlayout.widget.ConstraintLayout>